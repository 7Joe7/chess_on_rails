<% last_chat_id = chats.last.id %>
<% chats.each do |chat| %>
  <div class="chat_line" title="<%= chat.created_at.strftime('%a %H:%M') %>">
    <b><%= chat.player.name %>: </b><%= process_chat(chat, chat.id == last_chat_id) %></div>
<% end %>

<script type="text/javascript">
var objDiv = document.getElementById("chat");
if(objDiv) objDiv.scrollTop = objDiv.scrollHeight;
</script>
